using System;

class Program
{
    static void Main()
    {
        // Yêu cầu người dùng nhập chiều dài của hình chữ nhật
        Console.Write("Nhập chiều dài của hình chữ nhật (số nguyên không dấu 2 byte): ");
        string inputChieuDai = Console.ReadLine();

        // Yêu cầu người dùng nhập chiều rộng của hình chữ nhật
        Console.Write("Nhập chiều rộng của hình chữ nhật (số nguyên không dấu 2 byte): ");
        string inputChieuRong = Console.ReadLine();

        // Chuyển đổi giá trị nhập vào từ chuỗi sang số nguyên không dấu 2 byte
        if (ushort.TryParse(inputChieuDai, out ushort chieuDai) && ushort.TryParse(inputChieuRong, out ushort chieuRong))
        {
            // Tính diện tích của hình chữ nhật
            uint dienTich = (uint)chieuDai * chieuRong;

            // Tính chu vi của hình chữ nhật
            uint chuVi = (uint)(2 * (chieuDai + chieuRong));

            // In kết quả diện tích và chu vi lên màn hình
            Console.WriteLine("Diện tích của hình chữ nhật là: " + dienTich);
            Console.WriteLine("Chu vi của hình chữ nhật là: " + chuVi);
        }
        else
        {
            // Thông báo lỗi nếu giá trị nhập vào không hợp lệ
            Console.WriteLine("Giá trị nhập vào không hợp lệ. Vui lòng nhập số nguyên không dấu 2 byte.");
        }
    }
}
